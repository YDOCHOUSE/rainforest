<h1>Rainforest</h1>
<small><%= page_entries_info @products %></small>

<%= form_tag products_path, method: :get, authentication: false, id: 'search-form' do %>
  <%= text_field_tag :search, params[:search] %>
  
  <%= submit_tag "Search" %>
<% end %>

<%= link_to('New Product', new_product_path) %>

<div id="products">
  <%= render @products %>
</div>

<%= paginate @products %>